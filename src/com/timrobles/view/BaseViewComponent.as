package com.timrobles.view {    import flash.display.Sprite;        import com.timrobles.common.events.SuccessEvent;    import com.timrobles.interfaces.IDestroyable;    import com.timrobles.view.events.TransitionEvent;        /**     * @author Tim Robles     */    public class BaseViewComponent extends Sprite implements IDestroyable    {        //----------------------------------        //  Protected Methods        //----------------------------------                protected var _active:Boolean = false;                //--------------------------------------------------------------------------        //        //  Constructor        //        //--------------------------------------------------------------------------                public function BaseViewComponent()         {            super();            init();        }                //--------------------------------------------------------------------------        //        //  Public Methods        //        //--------------------------------------------------------------------------                public function deconstruct():void        {        	dispatchEvent(new SuccessEvent(SuccessEvent.SUCCESS));        }                public function show(duration:Number = 0.3, delay:Number = 0, offset:Number = 0):void        {            visible = true;            _active = true;            dispatchEvent(new TransitionEvent(TransitionEvent.TRANSITION_IN_COMPLETE));        }                public function hide(duration:Number = 0.3, delay:Number = 0, offset:Number = 0):void        {            visible = false;            _active = false;            dispatchEvent(new TransitionEvent(TransitionEvent.TRANSITION_OUT_COMPLETE));        }                public function get active():Boolean        {            return _active;        }            //--------------------------------------------------------------------------        //        //  Protected Methods        //        //--------------------------------------------------------------------------                protected function init():void        {        }    }}