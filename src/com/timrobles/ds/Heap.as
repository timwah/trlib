package com.timrobles.ds {	/**	 * @author timrobles	 */	public class Heap implements Collection, ISortable {				protected var autosort : Boolean;		protected var heap : Array;				public function Heap( autosort : Boolean = false, ...args ) {					this.autosort = autosort;			heap = args ? args : new Array();						}				public function contains( element : * ) : Boolean {						return heap.indexOf( element ) > -1;					}				public function sort() : void {					}				public function isEmpty() : Boolean {						return heap.length == 0;					}				public function get iterator() : Iterator {						return new ArrayIterator( heap );					}				protected function getLeft( index : uint ) : * {					return heap[ 2 * index + 1 ];						}				protected function getRight( index : uint ) : * {					return heap[ 2 * index + 2 ];						}			}	}