package com.timrobles.common.ui {    import flash.display.Sprite;    import flash.events.Event;        import com.graphikboutique.view.shared.GBColor;    import com.timrobles.view.BaseViewComponent;        /**     * @author Tim Robles     */    public class CircleLoader extends BaseViewComponent     {    	//----------------------------------    	//  Private Members    	//----------------------------------    	    	private var circle:Sprite;    	     	//--------------------------------------------------------------------------    	//    	//  Constructor    	//    	//--------------------------------------------------------------------------    	    	public function CircleLoader()     	{            super(); 	    	}        //--------------------------------------------------------------------------        //        //  Public Methods        //        //--------------------------------------------------------------------------                override public function show(duration:Number = 0.3, delay:Number = 0, offset:Number = 0):void        {            super.show(duration, delay, offset);            if (!hasEventListener(Event.ENTER_FRAME))                addEventListener(Event.ENTER_FRAME, enterFrameHandler);        }        override public function hide(duration:Number = 0.3, delay:Number = 0, offset:Number = 0):void        {            super.hide(duration, delay, offset);            if (hasEventListener(Event.ENTER_FRAME))                removeEventListener(Event.ENTER_FRAME, enterFrameHandler);        }                //--------------------------------------------------------------------------        //        //  Event Handlers        //        //--------------------------------------------------------------------------                private function enterFrameHandler(event:Event):void        {        	rotation -= 10;        }        //--------------------------------------------------------------------------        //        //  Protected Methods        //        //--------------------------------------------------------------------------                override protected function init():void        {        	super.init();        	        	mouseEnabled = false;        	mouseChildren = false;        	            circle = new Sprite();            circle.graphics.lineStyle(4, GBColor.RED);//            var mat:Matrix = new Matrix();//            mat.createGradientBox(Math.PI * 3, 12);//            circle.graphics.lineGradientStyle(GradientType.LINEAR, [GBColor.RED, 0xFFFFFF], [1, 1], [0, 128], mat);            circle.graphics.drawCircle(0, 0, 6);            circle.graphics.endFill();            var circleCut:Sprite = new Sprite();            circleCut.graphics.beginFill(0xFFFFFF);            circleCut.graphics.drawRect(0, -1.5, 10, 3);            circleCut.graphics.endFill();            //circleCut.blendMode = BlendMode.ALPHA;            //circleCut.cacheAsBitmap = true;            circle.addChild(circleCut);	            //circle.cacheAsBitmap = true;            addChild(circle);        }    }}