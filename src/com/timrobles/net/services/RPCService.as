package com.timrobles.net.services {    import flash.events.Event;    import flash.net.URLLoader;        import com.timrobles.common.events.SuccessEvent;    import com.timrobles.logger.Logger;    import com.timrobles.net.env.RPCStat;        /**     * @author Tim Robles     */    public class RPCService extends SimpleService    {    	//--------------------------------------------------------------------------    	//    	//  Constructor    	//    	//--------------------------------------------------------------------------    	    	public function RPCService(serviceURL:String)     	{    		super(serviceURL);    	}    	    	//--------------------------------------------------------------------------    	//    	//  Event Handlers    	//    	//--------------------------------------------------------------------------    	    	override protected function completeHandler(event:Event):void    	{    		var xmlData:XML;    		try    		{                xmlData = XML(urlLoader.data);    		}    		catch (err:Error)    		{    			Logger.error(err.message);                dispatchEvent(new SuccessEvent(SuccessEvent.FAIL));                return;    		}    		if (String(xmlData.@stat) == RPCStat.OK)    		{    			data = xmlData;    			dispatchEvent(new SuccessEvent(SuccessEvent.SUCCESS));            }            else            {            	dispatchEvent(new SuccessEvent(SuccessEvent.FAIL));            }        }    }}