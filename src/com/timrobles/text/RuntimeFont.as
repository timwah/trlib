package com.timrobles.text {    import flash.display.Sprite;    import flash.text.Font;                        /**     * @author timrobles     */    public class RuntimeFont extends Sprite {    	    	//--------------------------------------------------------------------------    	//    	//  Constructor    	//    	//--------------------------------------------------------------------------    	    	public function RuntimeFont() {                super();                	}    	    	//--------------------------------------------------------------------------    	//    	//  Protected Methods    	//    	//--------------------------------------------------------------------------    	    	protected function register( fontClass : Class ) : Boolean {    	            var original : uint = Font.enumerateFonts( true ).length;            Font.registerFont( fontClass );            var modified : uint = Font.enumerateFonts( true ).length;            return modified == original + 1;                	}     	    }    }