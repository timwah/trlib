package com.timrobles.util {	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.geom.Matrix;		/**	 * @author Tim Robles	 */	public class BitmapUtil {				public static function resize( bmp : Bitmap, width : Number, height : Number = 0 ) : void {						var bWidth : Number = bmp.width;			var bHeight : Number = bmp.height;			if ( height == 0 )				height = width / bWidth * bHeight;						var bmd : BitmapData = new BitmapData( width, height );			var mat : Matrix = new Matrix();			mat.scale( width / bWidth, height / bHeight );			bmd.draw( bmp, mat, null, null, null, true );			bmp.bitmapData.dispose();			bmp.bitmapData = bmd;						}			}	}