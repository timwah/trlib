package com.timrobles.util {    import flash.text.Font;            /**     * @author timrobles     */    public class FontUtil {    	    	public static function hasFont( name : String ) : Boolean {    	    		var fonts : Array = Font.enumerateFonts( true );    		for each ( var font : Font in fonts ) {    			if ( font.fontName == name )    				return true;    		}	    		return false;    		    	}    	    }}