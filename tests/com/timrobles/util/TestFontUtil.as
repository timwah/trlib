package com.timrobles.util {    import flash.text.Font;        import flexunit.framework.TestCase;    import flexunit.framework.TestSuite;        /**     * @author timrobles     */    public class TestFontUtil extends TestCase {    	    	//--------------------------------------------------------------------------    	//    	//  Constructor    	//    	//--------------------------------------------------------------------------    	    	public function TestFontUtil( methodName : String = null ) {    		    		super( methodName );    		    	}    	    	//--------------------------------------------------------------------------    	//    	//  Test Suite    	//    	//--------------------------------------------------------------------------    	    	public static function suite() : TestSuite {    	    		var ts : TestSuite = new TestSuite();    		ts.addTest( new TestFontUtil( "testHasFont" ) );    		return ts;    			    	}    	    	//--------------------------------------------------------------------------    	//    	//  Tests    	//    	//--------------------------------------------------------------------------    	    	public function testHasFont() : void {     		    		var fonts : Array = Font.enumerateFonts( true );    		for each ( var font : Font in fonts )                assertTrue( FontUtil.hasFont( font.fontName ), "Expected has font to return true for " + font.fontName );	    		    	}    	    }    }